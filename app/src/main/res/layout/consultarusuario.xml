<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/ColumId"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_span="2"
                            android:background="#c0c0c0"
                            android:padding="10dp"
                            android:text="IdentificaciÃ²n" />

                        <TextView
                            android:id="@+id/ColumNomb"
                            android:layout_width="214dp"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:background="#c0c0c0"
                            android:padding="10dp"
                            android:text="Nombre de Usuario" />

                        <TextView
                            android:id="@+id/ColumApe"
                            android:layout_width="199dp"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:background="#c0c0c0"
                            android:padding="10dp"
                            android:text="Apellido                            " />

                        <TextView
                            android:id="@+id/ColumTelef"
                            android:layout_width="236dp"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:background="#c0c0c0"
                            android:padding="10dp"
                            android:text="Telefono                         " />

                        <TextView
                            android:id="@+id/ColumEmail"
                            android:layout_width="281dp"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:background="#c0c0c0"
                            android:padding="10dp"
                            android:text="@string/app_name" />

                        <TextView
                            android:id="@+id/ColumContras"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:background="#c0c0c0"
                            android:padding="10dp"
                            android:text="@string/app_name" />

                        <TextView
                            android:id="@+id/ColumRol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:padding="10dp"
                            android:text="@string/app_name"
                            android:background="#c0c0c0" />



                    <TableRow android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ListView
                            android:id="@+id/listId"
                            android:layout_width="199dp"
                            android:layout_height="wrap_content" />

                        <ListView
                            android:id="@+id/listNombre"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content" />

                        <ListView
                            android:id="@+id/listApellido"
                            android:layout_width="199dp"
                            android:layout_height="wrap_content" />

                        <ListView
                            android:id="@+id/listTelefono"
                            android:layout_width="236dp"
                            android:layout_height="wrap_content" />

                        <ListView
                            android:id="@+id/listEmail"
                            android:layout_width="281dp"
                            android:layout_height="wrap_content" />

                        <ListView
                            android:id="@+id/listContrasena"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content" />

                        <ListView android:id="@+id/listIdRol"
                            android:layout_width="141dp"
                            android:layout_height="wrap_content"/>

                    </TableRow>

                </TableRow>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
